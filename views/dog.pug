extends layout

block content
  .page-header
    h1 #{title}
  .row
    .col-sm-6
      .form-group.row
        .col-sm-3 Name
        .col-sm-3= dog.name
      .form-group.row
        .col-sm-3 Profile Picture
        .col-sm-3
          if dog.picture.length
            img(src=dog.picture[0],class='profile', height='200', width='200')
          else
            img(src='/imgs/default-dog.png', class='profile', width='200', height='200')
      .form-group.row
        .col-sm-3 Location
        .col-sm-3
          span=owner.city
          span ,!{' '}
          span=owner.state
      .form-group.row
        .col-sm-3 Breed
        .col-sm-3= dog.breed
      .form-group.row
        .col-sm-3 Weight (lb)
        .col-sm-3= dog.weight
      .form-group.row
        .col-sm-3 Gender
        .col-sm-3= dog.gender
      .form-group.row
        .col-sm-3 Age
        .col-sm-3= dog.age
      .form-group.row
        .col-sm-3 Fixed
        .col-sm-3= dog.fixed
      .form-group.row
        .col-sm-3 Temperament
        .col-sm-3= dog.temperament
      .form-group.row
        .col-sm-3 Energy
        .col-sm-3= dog.energy
      .form-group.row
        .col-sm-3 About
        .col-sm-3= dog.about
    .col-sm-6
      h2 Messages
      .panel-group
      each comment in dog.comments
        .panel.panel-default
          .panel-heading
            span= comment.username
            span.pull-right= comment.created
          .panel-body
            div
              span Suggested Pal:!{' '}
                a(href=comment.palid)= comment.palname
            br
            div= comment.content 
      fieldset
        legend.text-info Submit New Message
        form(method='post', action='/dog/comment/'+dog._id)
          .form-group.row
            .col-sm-2 Name:!{' '}
            .col-sm-4= user.username
              input(type='hidden',name='userid',value=user._id)
              input(type='hidden',name='username',value=user.username)
          .form-group.row
            .col-sm-2 Paw Pal:!{' '}
            .col-sm-4
              select(name="palid")
                each dog in user.dogs
                  option(value=dog._id)
                    span=dog.name
          .form-group.row
            .col-sm-2 Comment:!{' '}
            .col-sm-4
              textarea(name="comment",rows=4, cols=50)
          .form-group.row
            .col-sm-offset-2.col-sm-4
              input.btn.btn-primary(type="submit", value="Send Message")
