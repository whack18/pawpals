extends ../layout

block content
  .page-header
    h3 Dog Information
    .container
     form.form-horizontal(action='/account/addDog', enctype='multipart/form-data', method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group.row
          label.col-sm-2.col-form-label(for='name') Name
          .col-sm-5
            input.form-control(type='text', name='name', id='name' placeholder='Fido' required)
        .form-group.row
          label.col-sm-2.col-form-label(for='breed') Breed
          .col-sm-5
            input.form-control(type='text', name='breed', id='breed' placeholder='Chihuahua')
        .form-group.row
          label.col-sm-2.col-form-label(for='weight') Weight (lb)
          .col-sm-2
            input.form-control(type='number', name='weight', id='weight' placeholder='55')
        fieldset.form-group.row
          label.col-sm-2.col-form-label(for='gender') Gender
          .col-sm-5
            label.radio-inline
              input(type='radio', name='gender', value="male" required)
              | Male
            label.radio-inline
              input(type='radio', name='gender', value="female" required)
              | Female
        .form-group.row
          label.col-sm-2.col-form-label(for='age') Age(Birthdate) 
          .col-sm-2
            input.form-control(type='date', name='age', id='age')
        .form-group.row
          label.col-sm-2.col-form-label(for='fixed') Fixed
          .col-sm-5
            label.radio-inline
              input(type='radio', name='fixed', value="yes")
              | Yes
            label.radio-inline
              input(type='radio', name='fixed', value="no")
              | No
        .form-group.row
          label.col-sm-2.col-form-label(for='temperament') Temperament
          .col-sm-5
            label.checkbox-inline
              input(type='checkbox', name='temperament', value="calm")
              | Calm
            label.checkbox-inline
              input(type='checkbox', name='temperament', value="excitable")
              | Excitable
            label.checkbox-inline
              input(type='checkbox', name='temperament', value="friendly")
              | Friendly
            label.checkbox-inline
              input(type='checkbox', name='temperament', value="shy")
              | Shy
            label.checkbox-inline
              input(type='checkbox', name='temperament', value="aggressive")
              | Aggressive
        .form-group.row
          label.col-sm-2.col-form-label(for='energy') Energy
          .col-sm-5
            label.radio-inline
              input(type='radio', name='energy', value="low")
              | Low
            label.radio-inline
              input(type='radio', name='energy', value="medium")
              | Medium
            label.radio-inline
              input(type='radio', name='energy', value="high")
              | High
        .form-group.row
          br
          label.col-sm-2.col-form-label(for='about') About:
          .col-sm-5
            textarea#about.form-control.col-sm-5(rows='5', placeholder="I Woof")
        .form-group.row
          label.col-sm-2.col-form-label(for='picture') Profile Picture
          .col-sm-7
            input(type='file' name='dog-pic')
        .form-group.row
          br
          .col-sm-offset-2.col-sm-6
            button.btn.btn-success(type='submit')
              i.fa.fa-paw
              | Add Dog
