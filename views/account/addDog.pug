extends ../layout

block content
  .page-header
    h3 Dog Information

  form.form-horizontal(action='/account/addDog', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='name') Dog's Name
      .col-sm-7
        input.form-control(type='text', name='name', id='name' placeholder='Ex: Fido')
    .form-group
      .col-sm-offset-3.col-sm-6
        button.btn.btn-success(type='submit')
          i.fa.fa-paw
          | Add Dog
